<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/readbg5"
    tools:context=".TeacherCourseDetailActivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300px"
            android:background="@color/black"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="800px"
                android:layout_height="match_parent"
                android:background="@color/teal_700">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/couse_detail_name"
                        android:layout_width="500px"
                        android:layout_height="80px"
                        android:layout_marginTop="50px"
                        android:layout_marginLeft="50px"
                        android:text="课程名称：XXXX"
                        android:textSize="50px"></TextView>

                    <LinearLayout
                        android:layout_width="323dp"
                        android:layout_height="80px">

                        <TextView
                            android:id="@+id/couse_detail_id"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="50px"
                            android:text="课号：123"></TextView>
                        <!--                        <TextView-->
                        <!--                            android:layout_width="400px"-->
                        <!--                            android:layout_height="100px"-->
                        <!--                            android:layout_marginLeft="50px"-->
                        <!--                            android:text="教师名称：新消息"></TextView>-->
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80px">
                        <TextView
                            android:id="@+id/couse_detail_stuNum"
                            android:layout_width="300px"
                            android:layout_height="100px"
                            android:layout_marginLeft="50px"
                            android:text="学生数：999"></TextView>
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>
            <Button
                android:id="@+id/bt_addRegister"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/lvse"
                android:text="发起\n签到"
                android:textSize="60px"
                android:textColor="@color/white"
                >
            </Button>
        </LinearLayout>

        <ListView
            android:id="@+id/register_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>
    </LinearLayout>


</RelativeLayout>

</android.support.constraint.ConstraintLayout>